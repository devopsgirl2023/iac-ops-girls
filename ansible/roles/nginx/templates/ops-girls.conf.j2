    server {
        listen       80;
        listen       [::]:80;
        server_name  "{{ your_name }}.{{ base_name }}";
        root         /usr/share/nginx/html;

        location / {
            proxy_pass http://localhost:8000/public/;
        }

        error_page 404 /404.html;
        location = /404.html {
        }

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
        }
    }